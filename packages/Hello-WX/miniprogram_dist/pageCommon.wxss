page {
    height: 100vh;
    font-size: 14px;
    line-height: 1.2;
    overflow: hidden;
    background-color: #e9e9e9;
    min-width: 0;
    min-height: 0;
}

/*小程序base组件*/
page, view, image, scroll-view {
    display: flex;
    flex-direction: column;
    position: relative;
    box-sizing: border-box;
    border: 0 solid;
    min-width: 0;
    min-height: 0;
}
