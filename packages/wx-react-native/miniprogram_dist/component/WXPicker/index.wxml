            style="position: absolute; height: {{itemLength * 50}}px; width: 100%"
            value="{{seleIndex}}"
            bindchange="onValueChange">
        <picker-view-column>
            <block
                    wx:for="{{tools.compact(childrenData)}}"
                    wx:key="key"
            >
                <childrenCPT
