    "@babel/traverse": "^7.1.6",
    "@babel/types": "^7.1.6",
    "colors": "^1.3.3",
    "commander": "^3.0.0",
    "copy-webpack-plugin": "^5.0.5",
    "enhanced-resolve": "^4.1.1",
    "fs-extra": "^7.0.0",
    "getopts": "^2.2.3",
    "loader-utils": "^1.2.3",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.7.4",
    "@types/fs-extra": "^8.0.1",
    "@types/node": "^12.12.11",
    "@types/webpack": "^4.41.0",
    "babel-jest": "^24.8.0",
    "jest": "^24.8.0"
  }
